  },
  "files": [
    {
      "path": "InfracostComment"
    }
  ],
  "content": {
    "details": {
      "path": "overview.md"
    }
  },
  "contributions": [
    {
      "id": "infracost-comment-task",
      "type": "ms.vss-distributed-task.task",
      "targets": [
        "ms.vss-distributed-task.tasks"
      ],
      "properties": {
        "name": "InfracostComment"
      }
    }
  ]
}
