{
  "manifestVersion": 1,
  "id": "infracost-comment-task",
  "name": "Infracost Comment",
  "version": "0.0.1",
  "publisher": "Infracost",
  "targets": [
    {
      "id": "Microsoft.VisualStudio.Services"
    }
  ],
