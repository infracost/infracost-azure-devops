    }
  },
  "contributions": [
    {
      "id": "infracost-setuptask",
      "type": "ms.vss-distributed-task.task",
      "targets": [
        "ms.vss-distributed-task.tasks"
      ],
      "properties": {
        "name": "InfracostSetup"
      }
    }
  ]
